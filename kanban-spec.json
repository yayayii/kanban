        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 25,
            "description": "Task name",
            "example": "Name"
          },
          "description": {
            "type": "string",
            "maxLength": 250,
            "description": "Task description",
            "example": "Description"
          }
        },
        "required": [
          "name",
          "description"
        ],
        "description": "Dto for creating a task"
      },
      "TaskUpdateDto": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "maxLength": 25,
            "description": "New task name",
            "example": "Name"
          },
          "description": {
            "type": "string",
            "maxLength": 250,
            "description": "New task description",
            "example": "Description"
          },
          "state": {
            "type": "string",
            "enum": [
              "New",
              "In progress",
              "Done"
            ],
            "description": "New task status",
            "example": "New"
          }
        },
        "required": [
          "name",
          "description",
          "state"
        ],
        "description": "Dto for updating a task"
      },
      "TaskResponseDto": {
